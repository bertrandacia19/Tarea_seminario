doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="css/navbar-top.css")
        <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" data-auto-replace-svg="nest"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        title Document
    body 


ul
  li
    a(href='/') Departamento

h3 Registro De Departamento
div
  form(action="/Departamento" method="post")
    input#q.form-control(type='search' name='q' value=q?q:"" placeholder='Buscar empleados')
    label(for='nombre_depart') Nombre Departamento
    input#nombre_depart(type='text'  placeholder=' ' name ="nombre_depart" required="required")
    label(for='descripcion_depart') Descripción
    input#descripcion_depart(type='text'  placeholder='' name ="descripcion_depart" required="required")
    input(type='submit' value='Agregar')
    

br
br
form(action="/eliminardepa" method="post")
        .form-group.mt-3
            label.fw-bold(for="id_depart") Datos departamento
                input.form-control.agregar(type='number' placeholder=' ID del departamento' name="id_depart" required)
                button.agregar.btn.btn-lg.btn-danger(type="submit") Eliminar 
br

.container
        table.table.table.table-striped
            thead
                tr
                    th #
                    th nombre Departamento
                    th Descripción
                    th Acciones
            tbody 
                if departamentos.length
                    each d in departamentos
                        tr
                            td #{d.id_depart}
                            td #{d.nombre_depart}
                            td #{d.descripcion_depart}
                            td.text-center
                                a.btn.btn-lg.btn-warning(href='/eliminardepa/<%= departamentos.id_depart %>') Editar
