h3 Registro De Empleados 
div
  form(action="/Empleado" method="post")
    label(for='nombre_emp') Nombre
    input#nombre_emp(type='text' name='nombre_emp' placeholder=' ' required="required")
    label(for='apellido_emp') Apellido
    input#apellido_emp(type='text' name='apellido_emp' placeholder=' ' required="required")
    label(for='edad_emp') Edad
    input#edad_emp(type='text' name='edad_emp' placeholder=' ' required="required")
    label(for='telefono_emp') Telefono
    input#telefono_emp(type='text' name='telefono_emp' placeholder=' ' required="required")
    label(for='corre_emp') Correo 
    input#corre_emp(type='text' name='corre_emp' placeholder=' ' required="required")
    label(for='direccion_emp') Direccion
    input#direccion_emp(type='text' name='direccion_emp' placeholder=' ' required="required")
    label(for='id_depart') Departamento
    select#id_depart(name='id_depart')
        each d in departamentos
            option(value=d.id_depart) #{d.nombre_depart}
      
    input(type='submit' value='Agregar')

br
