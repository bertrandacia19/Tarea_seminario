.container
        table.table.table.table-striped
            thead
                tr
                    th #
                    th  nombre
                    th Apellido
                    th edad 
                    th Telefono 
                    th correo
                    th Direcci√≥n 
                    th Departamento
                    th Acciones

                tbody
                    if empleados.length
                    each e in empleados
                        tr
                            td #{e.id_emp}
                            td #{e.nombre_emp}
                            td #{e.apellido_emp}
                            td #{e.edad_emp}
                            td #{e.telefono_emp}
                            td #{e.corre_emp}
                            td #{e.direccion_emp}
                            td #{e.id_depart}
                            td.text-center
                                td.text-center
                                    a.btn.btn-lg.btn-warning(href='/eliminardepa/<%= departamentos.id_depart %>') Editar

                    else
                        tr
                            td.text-orange.text-center.fw-bold(colspan='7') No se encuentran Empleados

                